<% include ./partials/Header.ejs %>
    <div
        class="w-full h-screen bg-purple-200 flex items-center justify-center bg-cover">
        <div class="w-80 h-90 bg-white rounded-md">
            <p class="text-2xl m-1 text-center leading-none tracking-tight mt-3  ">Welcome to Pinterest</p>
            <p class="text-center leading-none tracking-tight text-zinc-400 font-semibold">Create New Account</p>
            <form action="/register" method="post" class="text-center">
                <input type="email" placeholder="E-mail" name="email" class="border-2 rounded-md mx-3 my-2 text-center">
                <input type="text" placeholder="Full Name" name="username" class="border-2 rounded-md mx-3 text-center mb-2">
                <input type="password" placeholder="Password" name="password" class="border-2 rounded-md mx-3 text-center">
                <input type="number" placeholder="Contact" name="contact" class="border-2 rounded-md mx-3 text-center mt-2">
                <input type="submit" class=" bg-purple-200 w-[80%] rounded-full my-2 cursor-pointer"
                    placeholder="Submit">
            </form>
             
            <p class="tracking-tight text-zinc-300 text-center text-[12px] px-9">By continuing, you agree to Pinterest's
                <b class="text-zinc-500">Terms of Service</b>. Opens a new tab and acknowledge that you've read our <b
                    class="text-zinc-500">Policy</b>.</p>
            <a href="/" class="inline-block mt-3 ml-4 text-md mb-2">Have a Account ?</a>
        </div>
    </div>
    <% include ./partials/Footer.ejs %>